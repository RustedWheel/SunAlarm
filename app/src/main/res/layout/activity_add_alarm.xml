<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a1.compsci702.sunalarm.AddAlarmActivity">

    <TimePicker
        android:id="@+id/alarmTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirm_button"
        android:layout_alignStart="@+id/confirm_button"
        android:layout_below="@+id/textView"
        android:layout_marginTop="22dp"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="57dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/confirm_button"
        android:text="Confirm" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alarmTimePicker"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/alarmTimePicker"
        android:layout_marginTop="20dp"
        android:text="Pick Alarm Time"
        android:textSize = "25dp"/>

    <NumberPicker
        android:id="@+id/offset_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alarmTimePicker"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/alarmTimePicker"
        android:layout_toRightOf="@+id/alarmTimePicker"
        android:descendantFocusability="blocksDescendants" />

</RelativeLayout>
